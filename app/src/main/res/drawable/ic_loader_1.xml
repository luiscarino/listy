<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportHeight="12"
    android:viewportWidth="12">

    <group
        android:name="rotateGroup"
        android:pivotX="6"
        android:pivotY="6"
        android:rotation="90">
        <group
            android:name="scaleGroup"
            android:pivotX="6"
            android:pivotY="6"
            android:scaleX="1.3"
            android:scaleY="1.3">
            <!-- This path draws a circle. -->
            <path
                android:name="loaderPath"
                android:pathData="M 2,6
        C 2,3.8 3.8,2 6,2
        C 8.2,2 10,3.8 10,6
        C 10,8.2 8.2,10 6,10
        C 3.8,10 2,8.2 2,6"
                android:strokeColor="@color/colorAccent"
                android:strokeWidth="1" />
        </group>
    </group>

</vector>

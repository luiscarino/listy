<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animated_drawable"
        android:id="@+id/imageView2"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_title_white_48px"
        android:id="@+id/image_title"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_title"
        tools:text="Title"
        app:layout_constraintBottom_toBottomOf="@+id/image_title"
        app:layout_constraintTop_toTopOf="@+id/image_title"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_description_white_48px"
        android:id="@+id/image_description"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/image_title"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_date_range_white_48px"
        android:id="@+id/image_calendar"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/image_description"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:text="Completed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkCompleted"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/image_category"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_class_white_48px"
        android:id="@+id/image_category"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/image_calendar"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_description"
        tools:text="Description"
        app:layout_constraintTop_toTopOf="@+id/image_description"
        app:layout_constraintBottom_toBottomOf="@+id/image_description"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_description" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editDate"
        app:layout_constraintTop_toTopOf="@+id/image_calendar"
        app:layout_constraintBottom_toBottomOf="@+id/image_calendar"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Date"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_calendar" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCategory"
        app:layout_constraintTop_toTopOf="@+id/image_category"
        app:layout_constraintBottom_toBottomOf="@+id/image_category"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_category"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Category" />

    <Button
        android:text="Save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.95" />
</android.support.constraint.ConstraintLayout>